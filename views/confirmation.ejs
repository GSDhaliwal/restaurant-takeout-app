<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="container">
      <article class="card">
        <header class="card-header"> <strong>Your order is placed!</header>
        <div class="card-body">
          <article class="card">
            <div class="card-body column">
              <div class="col"> <strong>You will receive : </strong></div>
            </div>
          </article>
          <hr>
          <ul class="column">
            <% for (let item in confirmedItems) { %>
            <li class="col-md-4">
              <figure class="itemside mb-3">
                <div class="aside"><img src="https://raw.githubusercontent.com/yuzhakova/restaurant-takeout-app/master/public/images/1-main-buddha-bowl.jpg" class="img-sm border"></div>
                <figcaption class="info align-self-center">
                  <p class="title"><%= item %><br> qty: <%= confirmedItems[item] %></p>
                </figcaption>
              </figure>
            </li>
            <% } %>
          </ul>
          <hr>
          <article class="card">
            <div class="card-body column">
              <div class="col">Subtotal: $30.96 Tax: $1.54<br><strong>Total:$32.60</strong> </div>
            </div>
          </article>
        </div>
      </article>
    </div>
  </body>
</html>
